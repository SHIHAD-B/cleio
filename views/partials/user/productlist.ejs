<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<section class="section-products">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header">
                    <h3>Featured Product</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <% if (data) { %>
                <% data.forEach((value)=> { %>
                    <!-- Single Product -->
                    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                        <div id="product-1" class="single-product">
                            <div class="part-1">
                                <a href="/productdetail/<%=value.id%>"> <img src="<%= value.Image[0].Main %>" alt="sss"
                                        style="width: 100%; height: 100%;"></a>
                                <span class="new">new</span>
                                <ul>

                                    <li style="cursor: pointer;" onclick="favorite('<%=value.id%>')"><a><i
                                                class="fas fa-heart"></i></a></li>
                                    <li><a href="/productdetail/<%=value.id%>"><i class="fas fa-expand"></i></a></li>
                                </ul>
                            </div>
                            <div class="part-2">
                                <h3 class="product-title">
                                    <%= value.Name %>
                                </h3>
                                <h4 class="product-old-price">₹<%= value.Price +2000%>
                                </h4>
                                <h4 class="product-price">₹<%= value.Price %>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } %>
        </div>
    </div>
</section>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>

    function favorite(productid) {


        const url = '/add_to_wishlist';


        const data = {
            id: productid
        };

        const headers = {
            'Content-Type': 'application/json',
        };


        fetch(url, {
            method: 'POST',
            headers: headers,
            body: JSON.stringify(data),
        })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    Toastify({
                        text: data.message,
                        className: "info",
                        close: true,
                        style: {
                            background: "#408e5f",
                        }
                    }).showToast();
                } else {
                    console.error('Error adding item to the wishlist.');
                }
            })
            .catch(error => {
                console.error('Network error:', error);
            });

    }
</script>