                                                    </tbody>
                                                    </table>
                                </div>
                            </div>
                        </div>
                </div>


                <script>

                    function validateEmail(email) {
                        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+/;
                        return emailRegex.test(email);
                    }

                    function isEmpty(value) {
                        const trimmedValue = value.trim();
                        return trimmedValue === "";
                    }



                    function validatePassword(password) {
                        const strongPasswordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#\$%^&*])[A-Za-z\d!@#\$%^&*]{8,}$/;
                        return strongPasswordPattern.test(password);
                    }


                    async function editAdmin(index) {
                        let pass = true;

                        const emailInput = document.querySelector("#email_" + index);
                        const emailValue = emailInput.value;
                        const emailError = document.querySelector("#email-error_" + index);

                        const role = document.querySelector('#adminRole_' + index);
                        const roleValue = role.value;

                        const authority = document.querySelector('#authority_' + index);
                        const authorityValue = authority.value;

                        const status = document.querySelector("#status_" + index);
                        const statusValue = status.value;

                        const firstNameInput = document.querySelector("#name_" + index);
                        const firstNameValue = firstNameInput.value;
                        const firstNameError = document.querySelector("#name-error_" + index);

                        const passwordInput = document.querySelector("#Password_" + index);
                        const passwordValue = passwordInput.value;
                        const passwordError = document.querySelector("#password-error_" + index);

                        emailError.textContent = "";
                        firstNameError.textContent = "";
                        passwordError.textContent = "";


                        if (isEmpty(emailValue)) {

                            emailError.textContent = "Email can't be empty";
                            pass = false;
                        }

                        if (!validateEmail(emailValue)) {
                            emailError.textContent = "Invalid email format. Please try again.";
                            pass = false;
                        }

                        if (isEmpty(firstNameValue)) {
                            firstNameError.textContent = "Name can't be empty.";
                            pass = false;
                        }
                        if (passwordValue.length && !validatePassword(passwordValue) && passwordValue.length > 0) {
                            passwordError.textContent = "Password is too weak";
                            pass = false;
                        }
                        if (pass) {

                            const url = '/admin/editadmin';

                            const data = {
                                email: emailValue,
                                name: firstNameValue,
                                password: passwordValue,
                                role: roleValue,
                                authority: authorityValue,
                                status: statusValue
                            };

                            try {
                                const response = await fetch(url, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify(data),
                                });

                                if (response.ok) {
                                    const result = await response.json();
                                    window.location.href = '/admin/adminManagement';
                                } else {

                                }
                            } catch (error) {
                                console.error('Error during fetch:', error);
                            }
                        }
                    }


                    async function submit() {

                        const emailInput = document.querySelector("#email");
                        const emailValue = emailInput.value;
                        const emailError = document.querySelector("#email-error");

                        const role = document.querySelector('#adminRole');
                        const roleValue = role.value;

                        const authority = document.querySelector('#authority');
                        const authorityValue = authority.value;

                        const status = document.querySelector("#status");
                        const statusValue = status.value;

                        const firstNameInput = document.querySelector("#name");
                        const firstNameValue = firstNameInput.value;
                        const firstNameError = document.querySelector("#name-error");

                        const passwordInput = document.querySelector("#Password");
                        const passwordValue = passwordInput.value;
                        const passwordError = document.querySelector("#password-error");

                        // Clear any previous error messages
                        emailError.textContent = "";
                        firstNameError.textContent = "";
                        passwordError.textContent = "";

                        let pass = true;

                        if (isEmpty(emailValue)) {

                            emailError.textContent = "Email can't be empty";
                            pass = false;
                        }

                        if (!validateEmail(emailValue)) {
                            emailError.textContent = "Invalid email format. Please try again.";
                            pass = false;
                        }

                        if (isEmpty(firstNameValue)) {
                            firstNameError.textContent = "Name can't be empty.";
                            pass = false;
                        }

                        if (isEmpty(passwordValue)) {
                            passwordError.textContent = "Password can't be empty.";
                            pass = false;
                        }

                        if (!validatePassword(passwordValue) && passwordValue.length > 0) {
                            passwordError.textContent = "Password is too weak";
                            pass = false;
                        }

                        if (pass) {

                            const url = '/admin/addadmin';

                            const data = {
                                email: emailValue,
                                name: firstNameValue,
                                password: passwordValue,
                                role: roleValue,
                                authority: authorityValue,
                                status: statusValue
                            };

                            try {
                                const response = await fetch(url, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify(data),
                                });

                                if (response.ok) {
                                    const result = await response.json();
                                    window.location.href = '/admin/adminManagement';
                                } else {
                                    emailError.textContent = "admin already exist"
                                }
                            } catch (error) {
                                console.error('Error during fetch:', error);
                            }
                        }
                    }
                </script>
