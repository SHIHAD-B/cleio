                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure to block
                                                        <%-value.Firstname%>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class=" btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <a href="/admin/block/<%= value._id %>">
                                                            <button type="button" class="btn-danger">Block</button>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <button class="btn btn-sm" data-toggle="modal"
                                            data-target="#block<%= value._id %>"><img src="/admin/images/padlock.png"
                                                alt=""></button>

                                    </td>
                                    <% } else { %>
                                        <td>
                                            <div class="modal fade" id="unblock<%= value._id %>" tabindex="-1"
                                                role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">
                                                                Confirm
                                                                delete
                                                            </h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure to unblock
                                                            <%-value.Firstname%>
                                                        </div>
                                                        <div class="modal-footer">
