                    <div class="whole col-12">
                        <div class="mt-5 col-12">
                            <div class="row">
                                <div class="col-md-10 table-container">
                                    <h1 class="text-primary use">User Details</h1>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>First Name</th>
                                                <th>Second Name</th>
                                                <th>Email</th>
                                                <th>Phone Number</th>
                                                <th>Status</th>
                                                <th></th>
                                                <th>Actions</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (data) { %>
                                                <% data.forEach((value, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td><%- value.Firstname %></td>
                                                        <td><%- value.Secondname %></td>
                                                        <td><%- value.Email %></td>
                                                        <td><%- value.Mobile %></td>
                                                        <td><%- value.Status %></td>
                                                        <td>
                                                            <div class="modal fade" id="editModal<%= value._id %>"
                                                                tabindex="-1" role="dialog"
                                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                                <form id="editUserForm"
                                                                    action="/admin/edituser/<%-value._id%>"
                                                                    method="POST">
                                                                    <div class="modal-dialog" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title"
                                                                                    id="exampleModalLabel">Edit user
                                                                                </h5>
                                                                                <button type="button" class="close"
                                                                                    data-dismiss="modal"
                                                                                    aria-label="Close">
                                                                                    <span
                                                                                        aria-hidden="true">&times;</span>
                                                                                </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <label for="firstname">First
                                                                                    Name:</label>
                                                                                <input type="text" id="firstname"
                                                                                    name="firstname"
                                                                                    value="<%-value.Firstname%>"><br>
                                                                                <div class="error" id="firstname-error">
                                                                                </div>
                                                                                <label for="secondname">Second
                                                                                    Name:</label>
                                                                                <input type="text" id="secondname"
                                                                                    name="secondname"
                                                                                    value="<%-value.Secondname%>"><br>
                                                                                <div class="error"
                                                                                    id="secondname-error">
                                                                                </div>
                                                                                <label for="email">Email:</label>
                                                                                <input type="text" id="email"
                                                                                    name="email"
                                                                                    value="<%-value.Email%>"><br>
                                                                                <div class="error" id="email-error">
                                                                                </div>
                                                                                <label for="password">Password:</label>
                                                                                <input type="text" id="password"
                                                                                    name="password"><br>
                                                                                <div class="error" id="password-error">
                                                                                </div>
                                                                                <label for="status">Status:</label>
                                                                                <select id="status" name="status">
                                                                                    <option value="active">Active
                                                                                    </option>
                                                                                    <option value="blocked">Blocked
                                                                                    </option>
                                                                                </select><br>
                                                                                <label for="role">Role:</label>
                                                                                <select id="role" name="role">
                                                                                    <option value="user">User
                                                                                    </option>
                                                                                </select><br>
                                                                                <label for="mobile">Mobile:</label>
                                                                                <input type="text" id="phonenumber"
                                                                                    name="mobile"
                                                                                    value="<%-value.Mobile%>"><br>
                                                                                <div class="error" id="phone-error">
                                                                                </div>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button"
                                                                                    class=" btn-secondary"
                                                                                    data-dismiss="modal">Close</button>
                                                                                <button type="submit"
                                                                                    class="btn-success">Save</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>





                                                            <button class="btn btn-sm" data-toggle="modal"
                                                                data-target="#editModal<%= value._id %>"><img
                                                                    src="/admin/images/edit.png" alt="" width="12"
                                                                    height="12"></button>
                                                        </td>
                                                        <td>





                                                            <div class="modal fade" id="exampleModal<%= value._id %>"
                                                                tabindex="-1" role="dialog"
                                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title"
                                                                                id="exampleModalLabel">
                                                                                Confirm
